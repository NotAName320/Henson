            <!--         <DataTemplate> -->
            <!--           <Button HorizontalAlignment="Center" Content="Login" Command="{Binding Login}" -->
            <!--           Background="Transparent" IsEnabled="{Binding Parent.ButtonsEnabled}"/> -->
